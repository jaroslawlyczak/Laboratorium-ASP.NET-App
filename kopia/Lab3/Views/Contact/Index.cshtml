@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista kontaktów</h1>
<div>
    <table class="table">
        <tr>
            <th>Imię</th>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
        @foreach(var item in @Model)
        {
            <tr>
                <td>@item.Value.Name</td>
                <td>@item.Value.Email</td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Value.Id">Edycja</a>
                    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Value.Id">Szczegóły</a>
                    <a class="btn btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Value.Id">Usuń</a>
                </td>
            </tr>
        }
    </table>
</div>