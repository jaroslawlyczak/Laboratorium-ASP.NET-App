@using Lab4_App_Reservation.Models.ReservationModels;
@model Reservation

<div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
    <h1 class="text-3xl font-bold mb-4">
        Szczegóły
    </h1>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Właściciel: @Model.ContactName</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Data: @Model.Data.ToShortDateString()</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Miasto: @Model.Miasto</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Adres: @Model.Adress</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Nazwa pokoju: @Model.PokojNazwa</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Numer pokoju: @Model.PokojNumer</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Rozmiar pokoju: @Model.PokojRozmiar</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Piętro pokoju: @Model.PokojPietro</h3>
    </div>
    <div class="mb-2">
        <h3 class="text-lg font-semibold">Cena: @Model.Cena</h3>
    </div>
    <a class="bg-blue-500 text-white py-2 px-4 rounded-full hover:bg-blue-700 inline-block mt-4" asp-action="Index">Powrót</a>
</div>
